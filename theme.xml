<theme>
   <formatVersion>4</formatVersion>

   <view name="system,basic,detailed,video">
      <helpsystem name="help">
         <pos>1 1</pos>
      </helpsystem>
      <image name="background" extra="true">
         <tile>true</tile>
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./_inc/images/space.png</path>
         <color>141414</color>
      </image>
   </view>

   <feature supported="carousel">
      <view name="system">
         <carousel name="systemcarousel">
            <type>horizontal</type>
            <color>141414</color>
         </carousel>
         <text name="systemInfo">
            <backgroundColor>141414</backgroundColor>
            <color>666666</color>
            <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
            <fontSize>0.020833333333333</fontSize>
         </text>
         <image name="system-border" extra="true">
            <origin>0.5 0</origin>
            <pos>0.5 0.58125</pos>
            <size>0.25 0.002604166666667</size>
            <path>./_inc/images/space.png</path>
            <color>444444</color>
         </image>
         <text name="logoText">
            <fontPath>./_inc/fonts/ChangaOne-Italic.ttf</fontPath>
            <color>cccccc</color>
            <forceUppercase>true</forceUppercase>
         </text>
      </view>
   </feature>

   <view name="basic,detailed,video">
      <image name="logo">
         <origin>0 0.5</origin>
         <maxSize>0.125 0.0390625</maxSize>
         <color>ffffff44</color>
      </image>
      <text name="logoText">
         <size>0.125 0.0390625</size>
         <fontSize>0.020833333333333</fontSize>
         <fontPath>./_inc/fonts/ChangaOne-Italic.ttf</fontPath>
         <forceUppercase>true</forceUppercase>
         <color>555555</color>
         <alignment>left</alignment>
      </text>
      <textlist name="gamelist">
         <selectorColor>333333ff</selectorColor>
         <selectedColor>cccccc</selectedColor>
         <primaryColor>cccccc</primaryColor>
         <secondaryColor>cccccc</secondaryColor>
         <fontPath>./_inc/fonts/ChangaOne-Italic.ttf</fontPath>
         <fontSize>0.028645833333333</fontSize>
         <forceUppercase>1</forceUppercase>
         <alignment>center</alignment>
         <lineSpacing>1.6</lineSpacing>
      </textlist>
      <image name="help-random" extra="true">
         <path>./_inc/images/help-random.svg</path>
         <size>0.103125 0.024739583333333</size>
      </image>
      <image name="help-launch" extra="true">
         <path>./_inc/images/help-launch.svg</path>
         <size>0.095833333333333 0.024739583333333</size>
      </image>
      <image name="help-favorite" extra="true">
         <path>./_inc/images/help-favorite.svg</path>
         <size>0.107291666666667 0.024739583333333</size>
      </image>
   </view>

   <view name="basic">
      <image name="logo">
         <origin>0.5 0</origin>
         <pos>.5 0.143229166666667</pos>
      </image>
      <text name="logoText">
         <pos>0.4375 0.143229166666667</pos>
         <alignment>center</alignment>
      </text>
      <textlist name="gamelist">
         <pos>0.1875 0.2265625</pos>
         <size>0.625 0.520833333333333</size>
         <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
         <fontSize>0.0234375</fontSize>
      </textlist>
      <image name="help-launch" extra="true">
         <origin>0 0</origin>
         <pos>0.33125 0.78125</pos>
      </image>
      <image name="help-random" extra="true">
         <origin>0 0</origin>
         <pos>0.442708333333333 0.78125</pos>
      </image>
      <image name="help-favorite" extra="true">
         <origin>0 0</origin>
         <pos>0.565625 0.78125</pos>
      </image>
   </view>

