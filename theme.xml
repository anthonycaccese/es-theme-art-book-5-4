   </view>

   <view name="video">
      <image name="md_marquee">
         <origin>0 0</origin>
         <pos>1 1</pos>
      </image>
      <image name="video-background" extra="true">
         <origin>0.5 0.5</origin>
         <pos>0.720833333333333 0.694010416666667</pos>
         <size>0.341666666666667248 0.322916666666667</size>
         <path>./_inc/images/space.png</path>
         <color>bbbbbb</color>
      </image>
      <image name="video-screen" extra="true">
         <origin>0.5 0.5</origin>
         <pos>0.720833333333333 0.694010416666667</pos>
         <maxSize>0.333333333333333 0.3125</maxSize>
         <path>./_inc/images/space.png</path>
         <color>000000</color>
      </image>
      <video name="md_video">
         <origin>0.5 0.5</origin>
         <pos>0.720833333333333 0.694010416666667</pos>
         <maxSize>0.333333333333333 0.3125</maxSize>
         <delay>0</delay>
         <default>./_inc/videos/static.mp4</default>
         <showSnapshotNoVideo>false</showSnapshotNoVideo>
         <showSnapshotDelay>false</showSnapshotDelay>
      </video>
