            <zIndex>1</zIndex>
         </image>
      </view>
      <view name="system">
         <image name="system-border" extra="true">
            <zIndex>100</zIndex>
         </image>
      </view>
      <view name="detailed,video">
         <image name="help-launch" extra="true">
            <zIndex>100</zIndex>
         </image>
         <image name="help-favorite" extra="true">
            <zIndex>100</zIndex>
         </image>
         <image name="md-description-border" extra="true">
            <zIndex>100</zIndex>
         </image>
         <text name="logoText">
            <zIndex>200</zIndex>
         </text>
         <image name="help-random" extra="true">
            <zIndex>100</zIndex>
         </image>
      </view>
      <view name="video">
         <image name="video-background" extra="true">
            <zIndex>100</zIndex>
         </image>
